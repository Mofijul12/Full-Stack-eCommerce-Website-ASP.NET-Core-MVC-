@{
    ViewData["Title"] = "Assign Role";
}

<h1 class="alert alert-info text-center">
    <i class="bi bi-person-check-fill"></i> Assign Role To User
</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-success text-center">@ViewBag.msg</h4>

                    <form asp-action="AssignRole" asp-controller="Role" method="post">
                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">
                                <i class="bi bi-people-fill"></i> User List:
                            </label>
                            <div class="col-sm-9">
                                <select name="userData" class="form-select form-select-sm">
                                    <option disabled selected>---- Select User ----</option>
                                    @foreach (var item in ViewBag.users)
                                    {
                                        <option value="@item.Email">@item.Email</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">
                                <i class="bi bi-shield-lock-fill"></i> Role List:
                            </label>
                            <div class="col-sm-9">
                                <select name="roleData" class="form-select form-select-sm">
                                    <option disabled selected>---- Select Role ----</option>
                                    @foreach (var item in ViewBag.roles)
                                    {
                                        <option value="@item.NormalizedName">@item.NormalizedName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle-fill"></i> Assign Role
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="text-end mt-3">
                        <a asp-action="AllUser" asp-controller="Role" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-card-list"></i> All Registered Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
